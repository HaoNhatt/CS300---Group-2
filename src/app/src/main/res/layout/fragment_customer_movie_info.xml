<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.ui.MovieInfoFragment">

    <ImageButton
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/backButton"
        android:src="@drawable/back_arrow" />

    <ImageView
        android:id="@+id/movieBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backArrow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:contentDescription="@string/example_banner"
        android:padding="5sp"
        android:scaleX="3"
        android:scaleY="3"
        android:src="@mipmap/example_banner" />

    <TextView
        android:id="@+id/textMovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movieBanner"
        android:layout_marginStart="50sp"
        android:layout_marginTop="150sp"
        android:gravity="center"
        android:text="@string/movie_title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movieBanner"
        android:layout_marginStart="10sp"
        android:layout_marginTop="150sp"
        android:layout_marginEnd="10sp"
        android:layout_toEndOf="@id/textMovieTitle"
        android:gravity="center_vertical"
        android:text="@string/example_movie_title"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textMovieDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMovieTitle"
        android:layout_marginStart="50sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="@string/movie_description"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/movieDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMovieTitle"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_toEndOf="@id/textMovieDescription"
        android:gravity="center_vertical"
        android:text="@string/a_new_film_of_inside_out_series"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textMovieYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMovieDescription"
        android:layout_marginStart="50sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="@string/year"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/movieYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMovieDescription"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_toEndOf="@id/textMovieYear"
        android:gravity="center_vertical"
        android:text="@string/_2023"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textMovieDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMovieYear"
        android:layout_marginStart="50sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="@string/duration"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/movieDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMovieYear"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_toEndOf="@id/textMovieDuration"
        android:gravity="center_vertical"
        android:text="@string/_300_min"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp" />

    <Button
        android:id="@+id/startBookingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="30sp"
        android:background="@drawable/rounded_grey_button"
        android:paddingStart="30sp"
        android:paddingTop="10sp"
        android:paddingEnd="30sp"
        android:paddingBottom="10sp"
        android:text="@string/book_a_ticket" />

</RelativeLayout>