<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.ui.ChooseScheduleFragment">

    <ImageButton
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/backButton"
        android:src="@drawable/back_arrow" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listSchedules"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backArrow"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp" />

    <TextView
        android:id="@+id/announceNoSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="40sp"
        android:gravity="center"
        android:text="@string/there_is_no_available_schedule_for_this_movie_in_this_theater_please_try_again"
        android:textColor="@color/red"
        android:textSize="16sp" />

</RelativeLayout>