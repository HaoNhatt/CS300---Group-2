<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/staffMainMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".staff.ui.StaffMainMenuFragment" >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/accountsButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:importantForAccessibility="no"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/accountsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/accounts"
            android:textAlignment="center"
            android:textColor="@color/app_color_theme" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/linearLayout1">

        <ImageButton
            android:id="@+id/theatersButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:importantForAccessibility="no"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/theatersTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/theaters"
            android:textAlignment="center"
            android:textColor="@color/app_color_theme" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1">

        <ImageButton
            android:id="@+id/moviesButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:importantForAccessibility="no"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/moviesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/movies"
            android:textAlignment="center"
            android:textColor="@color/app_color_theme" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/linearLayout3">

        <ImageButton
            android:id="@+id/statisticsButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:importantForAccessibility="no"
            android:src="@android:drawable/btn_star" />

        <TextView
            android:id="@+id/statisticsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/statistics"
            android:textAlignment="center"
            android:textColor="@color/app_color_theme" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>