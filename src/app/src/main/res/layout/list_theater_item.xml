<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieItemBlock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="@drawable/rounded_input"
    android:padding="10sp"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/theaterItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="5sp"
        android:text="@string/cgv_nguyen_hong_dao"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/theaterItemAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/theaterItemName"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="5sp"
        android:text="@string/nguyen_hong_dao_p_14_q_tanbinh_tp_hcm"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp" />

</RelativeLayout>